<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
    <style>
        .container{
            max-width: 800px;
            margin-bottom: 100px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1 class="mb-4 mt-3">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>

    <% articles.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h3 class="card-title"><%= article.title %></h3>
                <div class="card-text mb-2">
                    <h5><%= article.description %></h5></div>
                <div class="card-text mb-2"><%= article.author %></div>
                <div class="card-subtitle text-muted mb-2">
                    <%= article.createdAt.toLocaleDateString() %>
                </div>
                <a href="articles/<%= article.id %>" class="btn btn-secondary">Read More</a>
                <a href="articles/edit/<%= article.id %>" class="btn btn-primary">Edit</a>
                <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    <% }) %>
</div>
</body>
</html>